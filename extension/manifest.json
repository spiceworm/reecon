{
  "manifest_version": 3,
  "name": "reecon",
  "version": "0.2.0",
  "description": "Analyze reddit content.",
  "icons": {
    "32": "icons/crystal-ball-32.png",
    "64": "icons/crystal-ball-64.png"
  },
  "background": {
    "scripts": [
      "dist/background.bundle.js"
    ],
    "type": "module"
  },
  "host_permissions": [
    "*://reecon.xyz/*"
  ],
  "options_ui": {
    "page": "dist/settings.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "tabs",
    "webRequest"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": [
        "dist/extension.bundle.js"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "64": "icons/crystal-ball-64.png"
    },
    "default_title": "reecon",
    "default_popup": "dist/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "me@reecon.xyz",
      "strict_min_version": "0.2.0"
    }
  }
}

{
  "manifest_version": 2,
  "name": "reecon",
  "version": "1.0",
  "description": "Predict and label the age and intelligence of reddit users.",
  "icons": {
    "32": "icons/crystal-ball-32.png",
    "64": "icons/crystal-ball-64.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false,
    "type": "module"
  },
  "permissions": [
    "storage",
    "*://127.0.0.1/*",
    "*://reecon.xyz/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["extension.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icons/crystal-ball-64.png",
    "default_title": "reecon",
    "default_popup": "popup/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "me@reecon.xyz",
      "strict_min_version": "1.0"
    }
  }
}

{
  "manifest_version": 2,
  "name": "reddit-recon",
  "version": "1.0",
  "description": "Predict and label the age and intelligence of reddit users.",
  "icons": {
    "48": "icons/border-48.png"
  },
  "permissions": [
    "storage",
    "*://127.0.0.1/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["extension.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Reddit-Recon",
    "default_popup": "popup/settings.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "me@spiceworm.com",
      "strict_min_version": "1.0"
    }
  }
}
